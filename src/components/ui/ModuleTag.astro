---
/**
 * FIDUBIT - Module Tag Component
 * Section identifier tag
 */
interface Props {
  number: string;
  label?: string;
  variant?: 'default' | 'fuchsia' | 'yellow' | 'purple' | 'blue' | 'green';
  class?: string;
}

const { 
  number,
  label,
  variant = 'default',
  class: className 
} = Astro.props;

const variantClasses = {
  default: 'border-white/10 bg-white/5 text-zinc-500',
  fuchsia: 'border-fuchsia-500/20 bg-fuchsia-500/5 text-fuchsia-400',
  yellow: 'border-yellow-500/20 bg-yellow-500/5 text-yellow-400',
  purple: 'border-purple-500/20 bg-purple-500/5 text-purple-400',
  blue: 'border-blue-500/20 bg-blue-500/5 text-blue-400',
  green: 'border-green-500/20 bg-green-500/5 text-green-400',
};
---

<span 
  class:list={[
    "text-[10px] border px-2 py-1 font-mono uppercase tracking-widest",
    variantClasses[variant],
    className
  ]}
>
  Module {number}{label && `: ${label}`}
</span>
