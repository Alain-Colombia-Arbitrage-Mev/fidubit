---
/**
 * FIDUBIT - Sidebar Component
 * Fixed left sidebar with system status indicators
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<aside 
  class:list={[
    "hidden md:flex flex-col w-16 border-r border-white/5 bg-fidubit-black/80",
    "shrink-0 backdrop-blur-md fixed top-16 bottom-0 left-0 z-40",
    className
  ]}
  aria-label="System status"
>
  <div class="flex-1 flex flex-col pt-32 pb-12 gap-x-12 gap-y-12 items-center justify-start">
    <!-- System Status -->
    <div class="whitespace-nowrap text-[10px] uppercase text-zinc-600 tracking-widest font-mono -rotate-90 flex items-center gap-2">
      <span 
        class="w-1.5 h-1.5 bg-yellow-500 rounded-full animate-pulse"
        aria-hidden="true"
      ></span>
      <span aria-label="All systems operational">Systems: Online</span>
    </div>
    
    <!-- Divider -->
    <div class="w-px h-24 bg-zinc-800" aria-hidden="true"></div>
    
    <!-- Node Identifier -->
    <div class="-rotate-90 whitespace-nowrap text-[10px] font-mono uppercase tracking-widest text-zinc-600">
      Node HK-09
    </div>
    
    <!-- Divider -->
    <div class="w-px h-16 bg-zinc-800" aria-hidden="true"></div>
    
    <!-- Version -->
    <div class="-rotate-90 whitespace-nowrap text-[10px] font-mono uppercase tracking-widest text-zinc-700">
      v2.4.1
    </div>
  </div>
  
  <!-- Bottom Indicator -->
  <div class="pb-8 flex flex-col items-center gap-2">
    <div class="w-px h-8 bg-gradient-to-b from-zinc-800 to-transparent" aria-hidden="true"></div>
    <div 
      class="w-2 h-2 bg-green-500 rounded-full shadow-[0_0_10px_rgba(34,197,94,0.5)]"
      aria-label="Connection active"
    ></div>
  </div>
</aside>
