---
/**
 * FIDUBIT - AI Solutions
 * Custom AI model training, fine-tuning, and agent development
 */
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';
import GlassPanel from '@/components/ui/GlassPanel.astro';
import Button from '@/components/ui/Button.astro';

const seo = {
  title: 'AI Solutions - Custom Model Training & AI Agents | FIDUBIT',
  description: 'Enterprise AI solutions: Big Data model training, HFT trading models with real-time sentiment analysis, HealthTech AI, and custom AI agents for advertising, live calls, and customer classification.',
  keywords: [
    'AI model training',
    'machine learning',
    'big data analytics',
    'HFT trading AI',
    'sentiment analysis',
    'healthtech AI',
    'nutrition AI',
    'AI agents',
    'customer classification',
    'live call AI',
    'advertising AI',
    'fine-tuning models',
    'enterprise AI',
  ],
};

const aiServices = [
  {
    id: 'big-data',
    icon: 'solar:database-linear',
    title: 'Enterprise Big Data',
    subtitle: 'Custom Model Training',
    description: 'Train custom AI models on your enterprise data. Extract insights, predict trends, and automate decision-making at scale.',
    color: 'blue',
    features: [
      'Custom data pipelines',
      'Distributed training infrastructure',
      'Real-time inference APIs',
      'Data lake integration',
      'MLOps & monitoring',
      'Model versioning',
    ],
    useCases: ['Demand forecasting', 'Fraud detection', 'Customer churn prediction', 'Supply chain optimization'],
  },
  {
    id: 'trading',
    icon: 'solar:chart-2-linear',
    title: 'HFT Trading Models',
    subtitle: 'Real-Time Sentiment Analysis',
    description: 'Fine-tuned models for high-frequency trading with live market sentiment analysis. Sub-millisecond predictions on market movements.',
    color: 'green',
    features: [
      'Real-time news parsing',
      'Social media sentiment',
      'Order flow analysis',
      'Market microstructure models',
      'Low-latency inference',
      'Backtesting frameworks',
    ],
    useCases: ['Crypto arbitrage', 'Equity momentum', 'Options pricing', 'Risk management'],
  },
  {
    id: 'healthtech',
    icon: 'solar:heart-pulse-linear',
    title: 'HealthTech AI',
    subtitle: 'Nutrition & Wellness Models',
    description: 'AI models for personalized nutrition, health recommendations, and medical data analysis with privacy-first architecture.',
    color: 'red',
    features: [
      'Personalized meal planning',
      'Nutrient optimization',
      'Biomarker analysis',
      'Fitness recommendations',
      'HIPAA compliant',
      'Federated learning',
    ],
    useCases: ['Diet planning apps', 'Fitness platforms', 'Telemedicine', 'Clinical research'],
  },
];

const aiAgents = [
  {
    icon: 'solar:megaphone-linear',
    title: 'Advertising Agents',
    description: 'AI agents that create, optimize, and manage ad campaigns across platforms. Automatic A/B testing and budget allocation.',
    capabilities: [
      'Copy generation',
      'Audience targeting',
      'Creative optimization',
      'Cross-platform management',
      'Performance analytics',
      'ROI maximization',
    ],
    metrics: [
      { value: '3x', label: 'ROAS Improvement' },
      { value: '60%', label: 'Cost Reduction' },
    ],
  },
  {
    icon: 'solar:phone-calling-linear',
    title: 'Live Call Agents',
    description: 'Voice AI agents for inbound/outbound calls. Handle sales, support, and scheduling with natural conversation flow.',
    capabilities: [
      'Natural voice synthesis',
      'Intent recognition',
      'Sentiment detection',
      'CRM integration',
      'Call routing',
      'Multilingual support',
    ],
    metrics: [
      { value: '24/7', label: 'Availability' },
      { value: '90%', label: 'Resolution Rate' },
    ],
  },
  {
    icon: 'solar:users-group-two-rounded-linear',
    title: 'Customer Classification',
    description: 'AI agents that segment, score, and classify customers in real-time. Predict lifetime value and churn probability.',
    capabilities: [
      'Lead scoring',
      'Segment discovery',
      'Churn prediction',
      'LTV modeling',
      'Behavioral clustering',
      'Real-time updates',
    ],
    metrics: [
      { value: '40%', label: 'Conversion Lift' },
      { value: '85%', label: 'Accuracy' },
    ],
  },
];

const techStack = [
  { name: 'PyTorch', icon: 'logos:pytorch-icon' },
  { name: 'TensorFlow', icon: 'logos:tensorflow' },
  { name: 'OpenAI', icon: 'simple-icons:openai' },
  { name: 'Anthropic', icon: 'simple-icons:anthropic' },
  { name: 'LangChain', icon: 'simple-icons:langchain' },
  { name: 'Hugging Face', icon: 'logos:hugging-face-icon' },
  { name: 'AWS', icon: 'logos:aws' },
  { name: 'Kubernetes', icon: 'logos:kubernetes' },
];

const stats = [
  { value: '50B+', label: 'Parameters Trained', icon: 'solar:cpu-bolt-linear' },
  { value: '99.9%', label: 'Uptime SLA', icon: 'solar:shield-check-linear' },
  { value: '<10ms', label: 'Inference Latency', icon: 'solar:bolt-linear' },
  { value: '500+', label: 'Models Deployed', icon: 'solar:rocket-2-linear' },
];

const colorClasses: Record<string, { bg: string; border: string; text: string; glow: string }> = {
  blue: { bg: 'bg-blue-500/10', border: 'border-blue-500/30', text: 'text-blue-500', glow: 'rgba(59,130,246,0.15)' },
  green: { bg: 'bg-green-500/10', border: 'border-green-500/30', text: 'text-green-500', glow: 'rgba(34,197,94,0.15)' },
  red: { bg: 'bg-red-500/10', border: 'border-red-500/30', text: 'text-red-500', glow: 'rgba(239,68,68,0.15)' },
  yellow: { bg: 'bg-yellow-500/10', border: 'border-yellow-500/30', text: 'text-yellow-500', glow: 'rgba(234,179,8,0.15)' },
  purple: { bg: 'bg-purple-500/10', border: 'border-purple-500/30', text: 'text-purple-500', glow: 'rgba(168,85,247,0.15)' },
};
---

<Layout seo={seo}>
  <WhatsAppButton />
  <Header />

  <main class="relative z-10 pt-16 min-h-screen bg-fidubit-black">
    
    <!-- Hero Section -->
    <section class="relative py-24 border-b border-white/5 overflow-hidden">
      <!-- Neural network background animation -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(59,130,246,0.08)_0%,transparent_40%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(168,85,247,0.08)_0%,transparent_40%)]"></div>
      </div>
      <div class="absolute inset-0 grid-pattern opacity-20"></div>
      
      <!-- Animated particles -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="ai-particle ai-particle-1"></div>
        <div class="ai-particle ai-particle-2"></div>
        <div class="ai-particle ai-particle-3"></div>
      </div>
      
      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <!-- Breadcrumb -->
          <div class="flex items-center justify-center gap-2 text-xs font-mono text-zinc-600 mb-8">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <span class="text-purple-500">AI Solutions</span>
          </div>
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-purple-500/10 border border-purple-500/20 mb-8">
            <span class="w-2 h-2 bg-purple-500 rounded-full animate-pulse"></span>
            <span class="text-xs font-mono text-purple-400 uppercase tracking-wider">Artificial Intelligence</span>
          </div>
          
          <!-- Title -->
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-medium text-white uppercase tracking-tight mb-6 leading-[0.9]">
            Custom
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 via-blue-500 to-cyan-400 block">
              AI Models
            </span>
          </h1>
          
          <!-- Description -->
          <p class="text-lg text-zinc-400 font-mono leading-relaxed mb-10 max-w-2xl mx-auto">
            Enterprise model training, fine-tuning for trading & healthtech, 
            and intelligent agents for advertising, calls, and customer intelligence.
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button 
              variant="primary" 
              href="#contact-ai" 
              icon="solar:arrow-right-linear"
              size="lg"
            >
              Start Your AI Project
            </Button>
            <Button 
              variant="outline" 
              href="#services"
              icon="solar:cpu-bolt-linear"
              iconPosition="left"
            >
              Explore Solutions
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="border-b border-white/5 py-12">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {stats.map((stat) => (
            <GlassPanel padding="md" rounded="lg" class="text-center hover:border-purple-500/30 transition-colors">
              <iconify-icon icon={stat.icon} class="text-purple-500 text-2xl mb-2"></iconify-icon>
              <div class="text-2xl font-bold text-white">{stat.value}</div>
              <div class="text-[10px] text-zinc-500 font-mono uppercase tracking-wide">{stat.label}</div>
            </GlassPanel>
          ))}
        </div>
      </div>
    </section>

    <!-- Main AI Services -->
    <section id="services" class="border-b border-white/5 py-20">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            Model Training & Fine-Tuning
          </h2>
          <p class="text-zinc-500 font-mono text-sm max-w-xl mx-auto">
            Custom AI models built for your specific industry and use case.
          </p>
        </div>

        <div class="space-y-8">
          {aiServices.map((service, index) => {
            const colors = colorClasses[service.color];
            const isEven = index % 2 === 0;
            return (
              <div class="group">
                <GlassPanel padding="none" rounded="2xl" class="overflow-hidden hover:border-white/20 transition-all">
                  <div class:list={["grid grid-cols-1 lg:grid-cols-2", !isEven && "lg:flex-row-reverse"]}>
                    <!-- Content Side -->
                    <div class="p-8 lg:p-12">
                      <div class="flex items-center gap-4 mb-6">
                        <div class:list={["w-14 h-14 rounded-xl flex items-center justify-center", colors.bg, colors.border, "border"]}>
                          <iconify-icon icon={service.icon} class:list={["text-2xl", colors.text]}></iconify-icon>
                        </div>
                        <div>
                          <h3 class="text-2xl font-medium text-white">{service.title}</h3>
                          <span class:list={["text-xs font-mono uppercase tracking-wide", colors.text]}>{service.subtitle}</span>
                        </div>
                      </div>
                      
                      <p class="text-zinc-400 font-mono text-sm leading-relaxed mb-8">
                        {service.description}
                      </p>
                      
                      <div class="grid grid-cols-2 gap-3 mb-8">
                        {service.features.map((feature) => (
                          <div class="flex items-center gap-2 text-xs font-mono text-zinc-400">
                            <iconify-icon icon="solar:check-circle-linear" class:list={[colors.text]}></iconify-icon>
                            {feature}
                          </div>
                        ))}
                      </div>
                      
                      <Button variant="outline" href="#contact-ai" icon="solar:arrow-right-linear" size="sm">
                        Learn More
                      </Button>
                    </div>
                    
                    <!-- Visual Side -->
                    <div class:list={["relative p-8 lg:p-12 flex items-center justify-center", isEven ? "lg:border-l" : "lg:border-r", "border-white/5"]}>
                      <div class="absolute inset-0 opacity-30" style={`background: radial-gradient(circle at center, ${colors.glow} 0%, transparent 70%)`}></div>
                      
                      <div class="relative z-10 w-full">
                        <h4 class="text-xs font-mono text-zinc-600 uppercase tracking-wide mb-4">Common Use Cases</h4>
                        <div class="grid grid-cols-2 gap-3">
                          {service.useCases.map((useCase) => (
                            <div class="p-4 rounded-xl bg-white/[0.02] border border-white/5 text-center hover:border-white/10 transition-colors">
                              <span class="text-sm text-zinc-400">{useCase}</span>
                            </div>
                          ))}
                        </div>
                      </div>
                    </div>
                  </div>
                </GlassPanel>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- AI Agents Section -->
    <section id="agents" class="border-b border-white/5 py-20 bg-fidubit-dark">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cyan-500/10 border border-cyan-500/20 mb-6">
            <iconify-icon icon="solar:bot-linear" class="text-cyan-500"></iconify-icon>
            <span class="text-xs font-mono text-cyan-400 uppercase tracking-wider">Autonomous AI</span>
          </div>
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            Intelligent Agents
          </h2>
          <p class="text-zinc-500 font-mono text-sm max-w-xl mx-auto">
            Deploy AI agents that work 24/7 to acquire, classify, and serve your customers.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {aiAgents.map((agent) => (
            <GlassPanel padding="lg" rounded="xl" class="hover:border-cyan-500/30 transition-all group relative overflow-hidden">
              <div class="absolute top-0 right-0 w-32 h-32 bg-cyan-500/5 blur-[60px] rounded-full pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity"></div>
              
              <div class="relative z-10">
                <div class="w-14 h-14 rounded-xl bg-cyan-500/10 border border-cyan-500/20 flex items-center justify-center mb-6 group-hover:bg-cyan-500/20 transition-colors">
                  <iconify-icon icon={agent.icon} class="text-cyan-500 text-2xl"></iconify-icon>
                </div>
                
                <h3 class="text-xl font-medium text-white mb-3">{agent.title}</h3>
                <p class="text-sm text-zinc-500 font-mono leading-relaxed mb-6">{agent.description}</p>
                
                <!-- Metrics -->
                <div class="grid grid-cols-2 gap-3 mb-6">
                  {agent.metrics.map((metric) => (
                    <div class="p-3 rounded-lg bg-white/[0.02] border border-white/5 text-center">
                      <div class="text-lg font-bold text-cyan-400">{metric.value}</div>
                      <div class="text-[10px] font-mono text-zinc-600 uppercase">{metric.label}</div>
                    </div>
                  ))}
                </div>
                
                <!-- Capabilities -->
                <h4 class="text-[10px] font-mono text-zinc-600 uppercase tracking-wide mb-3">Capabilities</h4>
                <div class="flex flex-wrap gap-2">
                  {agent.capabilities.map((cap) => (
                    <span class="text-[10px] font-mono px-2 py-1 rounded-full bg-white/5 text-zinc-500 border border-white/5">
                      {cap}
                    </span>
                  ))}
                </div>
              </div>
            </GlassPanel>
          ))}
        </div>
      </div>
    </section>

    <!-- Technology Stack -->
    <section class="border-b border-white/5 py-16">
      <div class="max-w-5xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-xl font-medium text-white uppercase tracking-tight mb-2">
            Technology Stack
          </h2>
          <p class="text-zinc-600 font-mono text-xs">
            Built on industry-leading AI frameworks and infrastructure
          </p>
        </div>

        <div class="flex flex-wrap items-center justify-center gap-8">
          {techStack.map((tech) => (
            <div class="flex flex-col items-center gap-2 opacity-60 hover:opacity-100 transition-opacity group">
              <iconify-icon icon={tech.icon} width="32" class="grayscale group-hover:grayscale-0 transition-all"></iconify-icon>
              <span class="text-[10px] font-mono text-zinc-600">{tech.name}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="border-b border-white/5 py-20">
      <div class="max-w-5xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            Our Process
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <div class="text-center">
            <div class="w-16 h-16 rounded-full bg-purple-500/10 border border-purple-500/30 flex items-center justify-center mx-auto mb-4 text-purple-500 text-xl font-bold">
              1
            </div>
            <h3 class="text-white font-medium mb-2 text-sm">Discovery</h3>
            <p class="text-[10px] font-mono text-zinc-500">Understand your data & objectives</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 rounded-full bg-purple-500/10 border border-purple-500/30 flex items-center justify-center mx-auto mb-4 text-purple-500 text-xl font-bold">
              2
            </div>
            <h3 class="text-white font-medium mb-2 text-sm">Data Prep</h3>
            <p class="text-[10px] font-mono text-zinc-500">Clean, label & prepare datasets</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 rounded-full bg-purple-500/10 border border-purple-500/30 flex items-center justify-center mx-auto mb-4 text-purple-500 text-xl font-bold">
              3
            </div>
            <h3 class="text-white font-medium mb-2 text-sm">Training</h3>
            <p class="text-[10px] font-mono text-zinc-500">Train & fine-tune models</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 rounded-full bg-purple-500/10 border border-purple-500/30 flex items-center justify-center mx-auto mb-4 text-purple-500 text-xl font-bold">
              4
            </div>
            <h3 class="text-white font-medium mb-2 text-sm">Validation</h3>
            <p class="text-[10px] font-mono text-zinc-500">Test & benchmark performance</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 rounded-full bg-green-500/10 border border-green-500/30 flex items-center justify-center mx-auto mb-4 text-green-500">
              <iconify-icon icon="solar:rocket-2-linear" width="28"></iconify-icon>
            </div>
            <h3 class="text-white font-medium mb-2 text-sm">Deploy</h3>
            <p class="text-[10px] font-mono text-zinc-500">Production APIs & monitoring</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact-ai" class="py-24 relative">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(168,85,247,0.05)_0%,transparent_50%)]"></div>
      
      <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            Start Your AI Project
          </h2>
          <p class="text-zinc-500 font-mono text-sm">
            Tell us about your AI needs and we'll design a custom solution.
          </p>
        </div>

        <GlassPanel padding="lg" rounded="2xl" class="relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-purple-500/10 blur-[60px] rounded-full pointer-events-none"></div>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">Company Name</label>
                <input type="text" placeholder="Your Company" class="smart-input w-full" required />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">Email</label>
                <input type="email" placeholder="you@company.com" class="smart-input w-full" required />
              </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">AI Solution Type</label>
                <select class="smart-input w-full appearance-none cursor-pointer">
                  <option value="" class="bg-black">Select solution type</option>
                  <option value="big-data" class="bg-black">Enterprise Big Data / Analytics</option>
                  <option value="trading" class="bg-black">HFT / Trading Models</option>
                  <option value="healthtech" class="bg-black">HealthTech / Nutrition AI</option>
                  <option value="agents-ads" class="bg-black">AI Agents - Advertising</option>
                  <option value="agents-calls" class="bg-black">AI Agents - Live Calls</option>
                  <option value="agents-classification" class="bg-black">AI Agents - Customer Classification</option>
                  <option value="custom" class="bg-black">Custom AI Solution</option>
                </select>
              </div>
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">Data Volume</label>
                <select class="smart-input w-full appearance-none cursor-pointer">
                  <option value="" class="bg-black">Select data volume</option>
                  <option value="small" class="bg-black">< 1 GB</option>
                  <option value="medium" class="bg-black">1 GB - 100 GB</option>
                  <option value="large" class="bg-black">100 GB - 1 TB</option>
                  <option value="enterprise" class="bg-black">> 1 TB</option>
                </select>
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">Industry</label>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                {['Fintech', 'Healthcare', 'E-Commerce', 'Trading', 'Marketing', 'Logistics', 'SaaS', 'Other'].map((industry) => (
                  <label class="flex items-center gap-2 p-3 rounded-lg bg-white/[0.02] border border-white/5 hover:border-purple-500/30 cursor-pointer transition-colors">
                    <input type="radio" name="industry" value={industry.toLowerCase()} class="accent-purple-500" />
                    <span class="text-xs font-mono text-zinc-400">{industry}</span>
                  </label>
                ))}
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">Project Description</label>
              <textarea 
                rows="4"
                placeholder="Describe your AI project, objectives, and any specific requirements..."
                class="smart-input w-full resize-none"
              ></textarea>
            </div>

            <button type="submit" class="btn-cta w-full group">
              <span>Request AI Consultation</span>
              <iconify-icon icon="solar:arrow-right-linear" class="group-hover:translate-x-1 transition-transform" width="16"></iconify-icon>
            </button>
          </form>
        </GlassPanel>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  .ai-particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(168, 85, 247, 0.6);
    border-radius: 50%;
    animation: float-particle 20s infinite linear;
  }
  
  .ai-particle-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .ai-particle-2 {
    top: 60%;
    left: 80%;
    animation-delay: -7s;
    background: rgba(59, 130, 246, 0.6);
  }
  
  .ai-particle-3 {
    top: 80%;
    left: 30%;
    animation-delay: -14s;
    background: rgba(34, 211, 238, 0.6);
  }
  
  @keyframes float-particle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    50% {
      transform: translate(100px, -150px) scale(1.5);
      opacity: 0.8;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translate(200px, 50px) scale(1);
      opacity: 0;
    }
  }
</style>

<script>
  // Intersection Observer for scroll animations
  const observerOptions: IntersectionObserverInit = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('sys-active');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.sys-reveal').forEach(el => {
    observer.observe(el);
  });
</script>
