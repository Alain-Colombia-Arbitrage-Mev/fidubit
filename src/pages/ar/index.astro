---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from '@/components/sections/Hero.astro';
import CardsSection from '@/components/sections/CardsSection.astro';
import InfrastructureSection from '@/components/sections/InfrastructureSection.astro';
import StaffTeaser from '@/components/sections/StaffTeaser.astro';
import MusicSection from '@/components/sections/MusicSection.astro';
import CorporateSection from '@/components/sections/CorporateSection.astro';
import ContactSection from '@/components/sections/ContactSection.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';

const seo = {
  title: 'FIDUBIT - البنية التحتية للتكنولوجيا المالية وإصدار البطاقات وتعزيز الموظفين',
  description: 'إصدار البطاقات في هونغ كونغ، تطوير التكنولوجيا المالية الأساسية، حلول البلوكتشين وتعزيز موظفي الهندسة.',
  keywords: ['التكنولوجيا المالية', 'إصدار البطاقات', 'البلوكتشين', 'تعزيز الموظفين', 'هونغ كونغ'],
};
---

<Layout seo={seo} lang="ar">
  <WhatsAppButton />
  <Header />
  <main class="relative z-10">
    <Hero />
    <CardsSection />
    <InfrastructureSection />
    <StaffTeaser />
    <MusicSection />
    <CorporateSection />
    <ContactSection />
    <Footer />
  </main>
</Layout>
