---
/**
 * FIDUBIT - Home Page (Portuguese)
 */
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from '@/components/sections/Hero.astro';
import CardsSection from '@/components/sections/CardsSection.astro';
import InfrastructureSection from '@/components/sections/InfrastructureSection.astro';
import StaffTeaser from '@/components/sections/StaffTeaser.astro';
import MusicSection from '@/components/sections/MusicSection.astro';
import CorporateSection from '@/components/sections/CorporateSection.astro';
import ContactSection from '@/components/sections/ContactSection.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';

const seo = {
  title: 'FIDUBIT - Infraestrutura Fintech, Cartões e Staff Augmentation',
  description: 'Emissão de cartões em Hong Kong, desenvolvimento core fintech, soluções blockchain e staff augmentation de engenharia.',
  keywords: ['fintech', 'emissão de cartões', 'blockchain', 'staff augmentation', 'desenvolvimento fintech'],
};
---

<Layout seo={seo} lang="pt">
  <WhatsAppButton />
  <Header />
  <main class="relative z-10">
    <Hero />
    <CardsSection />
    <InfrastructureSection />
    <StaffTeaser />
    <MusicSection />
    <CorporateSection />
    <ContactSection />
    <Footer />
  </main>
</Layout>
