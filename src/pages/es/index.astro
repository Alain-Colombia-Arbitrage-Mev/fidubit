---
/**
 * FIDUBIT - Home Page (Spanish)
 */
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from '@/components/sections/Hero.astro';
import CardsSection from '@/components/sections/CardsSection.astro';
import InfrastructureSection from '@/components/sections/InfrastructureSection.astro';
import StaffTeaser from '@/components/sections/StaffTeaser.astro';
import MusicSection from '@/components/sections/MusicSection.astro';
import CorporateSection from '@/components/sections/CorporateSection.astro';
import ContactSection from '@/components/sections/ContactSection.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';

const seo = {
  title: 'FIDUBIT - Infraestructura Fintech, Tarjetas y Staff Augmentation',
  description: 'Emisión de tarjetas en Hong Kong, desarrollo core fintech, soluciones blockchain y staff augmentation de ingeniería. Incorporamos empresas y construimos los rieles financieros en los que operan.',
  keywords: [
    'fintech',
    'emisión de tarjetas',
    'hong kong',
    'core fintech',
    'blockchain',
    'tokenización',
    'distribución musical',
    'incorporación de empresas',
    'pagos digitales',
    'tarjetas prepago',
    'staff augmentation',
    'ingenieros fintech',
  ],
};
---

<Layout seo={seo} lang="es">
  <WhatsAppButton />
  <Header />
  
  <main class="relative z-10">
    <Hero />
    <CardsSection />
    <InfrastructureSection />
    <StaffTeaser />
    <MusicSection />
    <CorporateSection />
    <ContactSection />
    <Footer />
  </main>
</Layout>
