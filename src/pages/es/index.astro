---
/**
 * TRACKWISE - Home Page (Spanish)
 */
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/layout/Header.astro';
import Sidebar from '@/components/layout/Sidebar.astro';
import Footer from '@/components/layout/Footer.astro';
import Hero from '@/components/sections/Hero.astro';
import CardsSection from '@/components/sections/CardsSection.astro';
import InfrastructureSection from '@/components/sections/InfrastructureSection.astro';
import StaffTeaser from '@/components/sections/StaffTeaser.astro';
import MusicSection from '@/components/sections/MusicSection.astro';
import CorporateSection from '@/components/sections/CorporateSection.astro';
import ContactSection from '@/components/sections/ContactSection.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';

const seo = {
  title: 'TRACKWISE - Infraestructura Fintech, Tarjetas y Staff Augmentation',
  description: 'Emisión de tarjetas en Hong Kong, desarrollo core fintech, soluciones blockchain y staff augmentation de ingeniería. Incorporamos empresas y construimos los rieles financieros en los que operan.',
  keywords: [
    'fintech',
    'emisión de tarjetas',
    'hong kong',
    'core fintech',
    'blockchain',
    'tokenización',
    'distribución musical',
    'incorporación de empresas',
    'pagos digitales',
    'tarjetas prepago',
    'staff augmentation',
    'ingenieros fintech',
  ],
};
---

<Layout seo={seo} lang="es">
  <WhatsAppButton />
  <Header />
  
  <main class="relative z-10 flex-1 flex flex-col md:flex-row pt-16">
    <Sidebar />
    <div class="flex-1 flex flex-col min-w-0 md:ml-16 relative">
      <Hero />
      <CardsSection />
      <InfrastructureSection />
      <StaffTeaser />
      <MusicSection />
      <CorporateSection />
      <ContactSection />
      <Footer />
    </div>
  </main>
</Layout>

<script>
  const observerOptions: IntersectionObserverInit = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('sys-active');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.sys-reveal').forEach(el => {
    observer.observe(el);
  });
</script>
