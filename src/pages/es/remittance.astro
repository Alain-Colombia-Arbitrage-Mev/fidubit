---

<Layout seo={seo} lang="es">
  <WhatsAppButton />
  <Header />

  <main class="relative z-10 pt-16 min-h-screen bg-tw-black">
    <!-- Hero Section -->
    <section class="relative py-24 border-b border-white/5 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_center,rgba(234,179,8,0.08)_0%,transparent_50%)]"></div>
      <div class="absolute inset-0 grid-pattern opacity-20"></div>
      
      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <div class="text-center max-w-3xl mx-auto">
          <div class="flex items-center justify-center gap-2 text-xs font-mono text-zinc-600 mb-8">
            <a href="/es" class="hover:text-white transition-colors">{t.common.home}</a>
            <span>/</span>
            <span class="text-yellow-500">{t.nav.remittance}</span>
          </div>
          
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-yellow-500/10 border border-yellow-500/20 mb-8">
            <span class="w-2 h-2 bg-yellow-500 rounded-full animate-pulse"></span>
            <span class="text-xs font-mono text-yellow-400 uppercase tracking-wider">{t.remittance.badge}</span>
          </div>
          
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-medium text-white uppercase tracking-tight mb-6 leading-[0.9]">
            {t.remittance.title}
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500 block">
              {t.remittance.titleHighlight}
            </span>
          </h1>
          
          <p class="text-lg text-zinc-400 font-mono leading-relaxed mb-10 max-w-2xl mx-auto">
            {t.remittance.description}
          </p>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button variant="primary" href="#contact-remittance" icon="solar:arrow-right-linear" size="lg">
              {t.remittance.cta}
            </Button>
            <Button variant="outline" href="#coverage" icon="solar:global-linear" iconPosition="left">
              {t.remittance.viewCoverage}
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="border-b border-white/5 py-12">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {stats.map((stat) => (
            <GlassPanel padding="md" rounded="lg" class="text-center hover:border-yellow-500/30 transition-colors">
              <iconify-icon icon={stat.icon} class="text-yellow-500 text-2xl mb-2"></iconify-icon>
              <div class="text-2xl font-bold text-white">{stat.value}</div>
              <div class="text-[10px] text-zinc-500 font-mono uppercase tracking-wide">{stat.label}</div>
            </GlassPanel>
          ))}
        </div>
      </div>
    </section>

    <!-- Services -->
    <section class="border-b border-white/5 py-20">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            {t.remittance.services.title}
          </h2>
          <p class="text-zinc-500 font-mono text-sm max-w-xl mx-auto">
            {t.remittance.services.description}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {services.map((service) => (
            <GlassPanel padding="lg" rounded="xl" class="hover:border-yellow-500/30 transition-all group">
              <div class="w-14 h-14 rounded-xl bg-yellow-500/10 border border-yellow-500/20 flex items-center justify-center mb-6 group-hover:bg-yellow-500/20 transition-colors">
                <iconify-icon icon={service.icon} class="text-yellow-500 text-2xl"></iconify-icon>
              </div>
              
              <h3 class="text-xl font-medium text-white mb-3">{service.title}</h3>
              <p class="text-sm text-zinc-500 font-mono leading-relaxed mb-6">{service.description}</p>
              
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center gap-2 text-xs font-mono text-zinc-400">
                    <iconify-icon icon="solar:check-circle-linear" class="text-yellow-500"></iconify-icon>
                    {feature}
                  </li>
                ))}
              </ul>
            </GlassPanel>
          ))}
        </div>
      </div>
    </section>

    <!-- Coverage Map -->
