            {t.remittance.coverage.title}
          </h2>
          <p class="text-zinc-500 font-mono text-sm max-w-xl mx-auto">
            {t.remittance.coverage.description}
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {regions.map((region) => {
            const colors = colorClasses[region.color];
            return (
              <GlassPanel padding="lg" rounded="xl" class="hover:border-white/20 transition-all">
                <div class="flex items-center gap-3 mb-6 pb-4 border-b border-white/5">
                  <div class:list={["w-10 h-10 rounded-lg flex items-center justify-center", colors.bg, colors.border, "border"]}>
                    <iconify-icon icon="solar:global-linear" class:list={[colors.text]}></iconify-icon>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium text-white">{region.name}</h3>
                    <span class="text-[10px] font-mono text-zinc-600 uppercase">{region.countries.length} PaÃ­ses</span>
                  </div>
                </div>
                
                <div class="space-y-4">
                  {region.countries.map((country) => (
                    <div class="flex items-start justify-between p-4 rounded-lg bg-white/[0.02] border border-white/5 hover:border-white/10 transition-colors">
                      <div class="flex items-center gap-3">
                        <span class="text-2xl">{country.flag}</span>
                        <div>
                          <div class="text-white font-medium">{country.name}</div>
                          <div class="text-[10px] font-mono text-zinc-500">{country.currency}</div>
                        </div>
                      </div>
                      <div class="flex flex-wrap gap-1 max-w-[150px] justify-end">
                        {country.features.map((feature) => (
                          <span class="text-[8px] font-mono px-1.5 py-0.5 rounded bg-white/5 text-zinc-500">
                            {feature}
                          </span>
                        ))}
                      </div>
                    </div>
                  ))}
                </div>
              </GlassPanel>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact-remittance" class="py-24 relative">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(234,179,8,0.05)_0%,transparent_50%)]"></div>
      
      <div class="max-w-4xl mx-auto px-6 relative z-10">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-medium text-white uppercase tracking-tight mb-4">
            {t.remittance.contact.title}
          </h2>
          <p class="text-zinc-500 font-mono text-sm">
            {t.remittance.contact.description}
          </p>
        </div>

        <GlassPanel padding="lg" rounded="2xl" class="relative overflow-hidden">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">{t.contact.form.company}</label>
                <input type="text" placeholder="Tu Empresa" class="smart-input w-full" required />
              </div>
              <div class="space-y-2">
                <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">{t.contact.form.email}</label>
                <input type="email" placeholder="tu@empresa.com" class="smart-input w-full" required />
              </div>
            </div>

            <div class="space-y-2">
              <label class="text-xs font-mono text-zinc-400 uppercase tracking-wide">{t.contact.form.message}</label>
              <textarea rows="3" placeholder="CuÃ©ntanos sobre tus necesidades de pago..." class="smart-input w-full resize-none"></textarea>
            </div>

            <button type="submit" class="btn-cta w-full group">
              <span>{t.contact.form.submit}</span>
              <iconify-icon icon="solar:arrow-right-linear" class="group-hover:translate-x-1 transition-transform" width="16"></iconify-icon>
            </button>
          </form>
        </GlassPanel>
      </div>
    </section>

    <Footer />
  </main>
</Layout>
